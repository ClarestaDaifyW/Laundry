<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambah.TambahTambahan">
    <TextView
        android:id="@+id/Judul_TambahTambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Tambahan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv1_NamaTambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Tambahan"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/Judul_TambahTambahan"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/ET1_NamaTambahan"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Nama Tambahan"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_NamaTambahan" />
    <TextView
        android:id="@+id/tv2_HargaTambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET1_NamaTambahan"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET2_HargaTambahan"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Harga"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2_HargaTambahan" />
    <TextView
        android:id="@+id/tv3_CabangTambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabang"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET2_HargaTambahan"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET3_CabangTambahan"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Cabang"
        android:maxLength="14"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3_CabangTambahan" />

    <!--        android:inputType="phone"-->

    <Button
        android:id="@+id/btn_Simpan"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:text="@string/btn_Simpan"
        android:textSize="18dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#CA8787"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ET3_CabangTambahan" />

</androidx.constraintlayout.widget.ConstraintLayout>