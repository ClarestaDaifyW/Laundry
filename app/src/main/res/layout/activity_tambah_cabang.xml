<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cabang.TambahCabang">

    <TextView
        android:id="@+id/tv1_TambahCabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Cabang"
        android:textColor="@color/text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv2_NamaCabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Cabang"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv1_TambahCabang"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/ET1_NamaLengkap"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Nama Cabang"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2_NamaCabang" />
    <TextView
        android:id="@+id/tv3_Alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvCARD_PELANGGAN_Almt"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET1_NamaLengkap"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET2_Alamat"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Alamat"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3_Alamat" />
    <TextView
        android:id="@+id/tv4_NoHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telepon"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET2_Alamat"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET3_NoHP"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Nomor Telepon"
        android:inputType="phone"
        android:maxLength="14"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv4_NoHP" />
    <TextView
        android:id="@+id/tv5_NamaCabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layanan"
        android:textSize="17dp"
        android:textColor="@color/text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET3_NoHP"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET4_Layanan_Cabang"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Layanan"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv5_NamaCabang" />

    <Button
        android:id="@+id/btn_Simpan"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:text="@string/btn_Simpan"
        android:textSize="18dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#CA8787"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ET4_Layanan_Cabang" />

</androidx.constraintlayout.widget.ConstraintLayout>