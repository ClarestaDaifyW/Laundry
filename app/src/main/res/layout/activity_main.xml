<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.laundry.MainActivity">

    <TextView
        android:id="@+id/sapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi, Claresta"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08 Januari 2025"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sapa" />

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="332dp"
        android:layout_height="151dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tvsiap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanggal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Estimasi Hari ini"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Rp."
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="265dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="40.000,-"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="115dp"
            android:text="Transaksi"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imagetransaksi"
            android:layout_width="92dp"
            android:layout_height="58dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/transaksi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="115dp"
            android:text="Pelanggan"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/IV_Pelanggan"
            android:layout_width="87dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/pelanggan2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="115dp"
            android:text="Laporan"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="88dp"
            android:layout_height="57dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/laporan" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvsiap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siap melayani pelanggan dengan setulus hati"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintBottom_toTopOf="@id/Tvjangan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/Tvjangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jangan kecewakan Pelanggan"
        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvsiap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/Cv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Tvjangan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textSize="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="40dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/akun2" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/Cv4"
        app:layout_constraintStart_toEndOf="@id/Cv2"
        app:layout_constraintTop_toBottomOf="@id/Tvjangan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textSize="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="25dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imagelayanan"
            android:src="@drawable/laundryremove" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Tvjangan"
        app:layout_constraintStart_toEndOf="@id/Cv3"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan"
            android:textSize="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tambah2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toStartOf="@id/Cv6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Cv2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="80dp"
            android:text="Pegawai"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/imagepegawai"
            android:layout_marginTop="10dp"
            android:src="@drawable/pegawai" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toStartOf="@id/Cv7"
        app:layout_constraintStart_toEndOf="@id/Cv5"
        app:layout_constraintTop_toBottomOf="@id/Cv3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:id="@+id/imagecabang"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cabang" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/Cv4"
        app:layout_constraintStart_toEndOf="@id/Cv6"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer"
            android:textSize="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/printer" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>