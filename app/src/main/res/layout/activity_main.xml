<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi, Claresta"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08 Januari 2025"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sapa" />

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimasi Hari ini"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 40.000,-"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="250dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textSize="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/transaksi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:textSize="16dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:layout_width="103dp"
            android:layout_height="78dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/Pelanggan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="16dp"
            android:layout_marginStart="265dp"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="74dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/laporan" />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvsiap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siap melayani pelanggan dengan setulus hati"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/Tvjangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jangan kecewakan Pelanggan"
        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvsiap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/Cv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Tvjangan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="42dp"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="81dp"
            android:src="@drawable/akun2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/Cv4"
        app:layout_constraintStart_toEndOf="@id/Cv2"
        app:layout_constraintTop_toBottomOf="@id/Tvjangan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="34dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/laundryremove" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Tvjangan"
        app:layout_constraintStart_toEndOf="@id/Cv3"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tambah2"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toStartOf="@id/Cv6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Cv2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="90dp"
            android:text="Pegawai"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/pegawai"
            android:layout_marginTop="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toStartOf="@id/Cv7"
        app:layout_constraintStart_toEndOf="@id/Cv5"
        app:layout_constraintTop_toBottomOf="@id/Cv3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="35dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:src="@drawable/cabang"
            android:layout_marginTop="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/Cv4"
        app:layout_constraintStart_toEndOf="@id/Cv6"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="35dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/printer" />
    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>