<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pembayaran"
        android:textSize="23dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvJudul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PilihMetodePembayaran"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"/>

    <View
        android:id="@+id/Vw1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="@color/text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul2"/>

    <Button
        android:id="@+id/btnBayarNanti"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:textColor="@color/text"
        android:text="@string/BayarNanti"
        android:backgroundTint="#E52020"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnTunai"
        app:layout_constraintTop_toBottomOf="@id/Vw1"/>
    <Button
        android:id="@+id/btnTunai"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:textColor="@color/text"
        android:text="@string/Tunai"
        android:backgroundTint="#FBA518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnQRis"
        app:layout_constraintTop_toBottomOf="@id/btnBayarNanti"/>
    <Button
        android:id="@+id/btnQRis"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:text="QRis"
        android:textColor="@color/text"
        android:backgroundTint="#FE5D26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDana"
        app:layout_constraintTop_toBottomOf="@id/btnTunai"/>
    <Button
        android:id="@+id/btnDana"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:text="DANA"
        android:textColor="@color/text"
        android:backgroundTint="#0065F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGoPay"
        app:layout_constraintTop_toBottomOf="@id/btnQRis"/>
    <Button
        android:id="@+id/btnGoPay"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:text="GoPay"
        android:textColor="@color/text"
        android:backgroundTint="#399918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnOvo"
        app:layout_constraintTop_toBottomOf="@id/btnDana"/>
    <Button
        android:id="@+id/btnOvo"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:text="OVO"
        android:backgroundTint="#725CAD"
        android:textColor="@color/text"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Batal"
        app:layout_constraintTop_toBottomOf="@id/btnGoPay"/>
    <TextView
        android:id="@+id/Batal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/Batal"
        android:textColor="@color/ungu"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toBottomOf="@id/btnOvo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
