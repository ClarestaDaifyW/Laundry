<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan.TambahLayanan">
    <TextView
        android:id="@+id/tv1_TambahLayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TambahLayanan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv2_NamaLayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tv_NamaLayanan"
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv1_TambahLayanan"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/ET1_NamaLayanan"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="@string/MasukkanNamaLayanan"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2_NamaLayanan" />
    <TextView
        android:id="@+id/tv3_Harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tv_Harga"
        android:textSize="17dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET1_NamaLayanan"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET2_Harga"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="@string/MasukkanHarga"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3_Harga" />

    <TextView
        android:id="@+id/tv5_NamaCabang_Layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tv_NamaCabang"
        android:textSize="17dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ET2_Harga"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/ET4_NamaCabang_Layanan"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/radius"
        android:hint="Masukkan Nama Cabang"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv5_NamaCabang_Layanan" />

    <Button
        android:id="@+id/btn_Simpan_Layanan"
        android:layout_width="295dp"
        android:layout_height="61dp"
        android:text="@string/btn_Simpan"
        android:textSize="18dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/button"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ET4_NamaCabang_Layanan"/>



</androidx.constraintlayout.widget.ConstraintLayout>